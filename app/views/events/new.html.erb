<h2> Please enter your new event info:</h2 >

<%= form_for @event do |f| %>
  <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

</br>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

</br>

<div>
  <%= f.label :descripton %>
  <%= f.text_field :description %>
</div>

</br>

<div>
  <%= f.label :capacity %>
  <%= f.number_field :capacity %>
</div>

</br>

<div>
  <%= f.label :name, 'Requires ID' %>
  <%= f.check_box :requires_id %>
</div>

</br>

  <%= f.submit "Create Event" %>
<% end %>
